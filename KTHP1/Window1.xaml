<Window x:Class="KTHP1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTHP1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dtgTim" Grid.Row="0" Grid.Column="0"
          AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên loại sản phẩm" Binding="{Binding TenLoai}" Width="auto"/>
                <DataGridTextColumn Header="Tổng số lượng" Binding="{Binding TongSoLuong}" Width="auto"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TongTien}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
